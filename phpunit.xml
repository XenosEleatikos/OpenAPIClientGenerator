<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" backupGlobals="false" colors="true"
         processIsolation="false" stopOnError="false" stopOnFailure="false" stopOnIncomplete="false"
         stopOnSkipped="false" stopOnRisky="false"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd" cacheDirectory=".phpunit.cache"
         backupStaticProperties="false">
    <coverage>
        <report>
            <html outputDirectory=".coverage" lowUpperBound="50" highLowerBound="90"/>
        </report>
    </coverage>
    <logging/>
    <testsuites>
        <testsuite name="src">
            <directory>tests/src</directory>
        </testsuite>
        <testsuite name="fixtures">
            <directory>tests/fixtures</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
    </source>
</phpunit>
